package ie.gmit.sw;

import java.io.*;
import java.util.*;

import javax.imageio.ImageIO;

public class Runner {
	
	public static void main(String[] args) throws Exception {
		
		Menu menu = new Menu();
		menu.showMenu();
		
		Parser parser = new Parser();
		parser.parseIgnoreFile();
		
		if (menu.isContentFromFile())
			parser.parse(new FileInputStream(menu.getUserFileName()));

		Queue<WordFrequency> wordQ = parser.getWordQueue();
		
		WordCloudImage img = new WordCloudImage();
		img.drawString(wordQ, menu.getMaxWords());
		
		ImageIO.write(img.getImage(), "png", new File(menu.getUserImageName()));
	}
	
	
}
